# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lingohub"

# JWT
JWT_SECRET="your-secret-key-here"
JWT_EXPIRES_IN="7d"

# Server
PORT=4000
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3000"

# OpenRouter API (for LLM-powered solution evaluation)
# Get your key from https://openrouter.ai/
OPENROUTER_API_KEY="your-openrouter-api-key-here"
LLM_DAILY_BUDGET=20

# Cloudinary (for image/PDF storage)
# Sign up at https://cloudinary.com/users/register_free
# Find credentials in Dashboard > Product Environment Credentials
CLOUDINARY_CLOUD_NAME="your-cloud-name-here"
CLOUDINARY_API_KEY="your-api-key-here"
CLOUDINARY_API_SECRET="your-api-secret-here"
